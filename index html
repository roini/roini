    <script>
       document.getElementById('showMore').addEventListener('click', function() {
    const hiddenItems = document.querySelectorAll('.item.hide');
    hiddenItems.forEach(function(item) {
        item.classList.remove('hide');
    });
    document.getElementById('showMore').classList.add('hide');
    document.getElementById('showMore').style.fontSize = "8pt";
    document.getElementById('showLess').classList.remove('hide');
    
});

document.getElementById('showLess').addEventListener('click', function() {
    const visibleItems = document.querySelectorAll('.item:not(.hide)');
    for (let i = 3; i < visibleItems.length; i++) {
        visibleItems[i].classList.add('hide');
        window.location.href = 'tindex.html';
    }
    document.getElementById('showMore').classList.remove('hide');
    
   
    document.getElementById('showLess').classList.add('hide');
    document.getElementById('showLess').style.fontSize = "8pt";
});
    </script>
     <script>
        document.getElementById('showMoreop').addEventListener('click', function() {
     const hiddenItems = document.querySelectorAll('.item.hide');
     hiddenItems.forEach(function(item) {
         item.classList.remove('hide');
     });
     document.getElementById('showMoreop').classList.add('hide');
     document.getElementById('showMoreop').style.fontSize = "8pt";
     document.getElementById('showLessop').classList.remove('hide');
     
 });
 
 document.getElementById('showLessop').addEventListener('click', function() {
     const visibleItems = document.querySelectorAll('.item:not(.hide)');
     for (let i = 3; i < visibleItems.length; i++) {
         visibleItems[i].classList.add('hide');
         window.location.href = 'tindex.html';
     }
     document.getElementById('showMoreop').classList.remove('hide');
     
    
     document.getElementById('showLessop').classList.add('hide');
     document.getElementById('showLessop').style.fontSize = "8pt";
 });
     </script>
    <script>
        document.querySelectorAll('form').forEach(function(form, index) {
            form.addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent the default form submission
                const dataInput = form.querySelector('input[type="hidden"]').value;
                const dataInput1 = form.querySelector('.paksia-satauri').innerText;
                const dataInput2 = form.querySelector('.tvPak').value;

                const url = `index.html#data${index + 1}=${encodeURIComponent(dataInput)}&data${index + 1}1=${encodeURIComponent(dataInput1)}+&data${index + 1}2=${encodeURIComponent(dataInput2)}`;
                window.location.href = url; // Redirect to the index page with data in the URL
            });
        });
    </script>
